  word-wrap : break-word ;
	
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 580rpx;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 11%;
  z-index: 9999;
  background: #F7F7F7;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 40rpx;
  color: #22cc22;
  text-align: center;
  border-bottom: 1px #eee solid;
}

.modal-content {
  width: 90%;
  margin: 0 auto;
  font-size: 38rpx;
  letter-spacing: 5rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  font-size: 32rpx;
}

.btn-cancel {
