.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 580rpx;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 11%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
  height: 700rpx;
}

.modal-title {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 40rpx;
  color: #22cc22;
  text-align: center;
  border-bottom: 1px #eee solid;
}

.modal-content {
  width: 90%;
  margin: 0 auto;
  font-size: 38rpx;
  letter-spacing: 5rpx;

}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  font-size: 32rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  font-size: 36rpx;
}

.btn-confirm {
  width: 50%;
  color: #22cc22;
  text-align: center;
  font-size: 36rpx;
}
.modal_item{
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  justify-content: center;
  margin-top: 10rpx;
}
.shemodal_item_left{
  font-size: 34rpx;
  width: 90%;
}

