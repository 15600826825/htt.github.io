/* pages/fact/fact.wxss */
page{
	height: 100%;
}
.cuttime{
	width: 90%;
	height: 300rpx;
	margin: 10rpx auto;
	background: linear-gradient(to bottom, #00CCFF, #DEE2EB);
	border-radius: 20rpx;
	opacity: 0.7;
}
.cutime_up{
	width: 100%;
	height: 30%;
	text-align: center;
	margin-top: 20rpx;
	color: white;
}
.cuttime_down{
	width: 100%;
	height: 70%;
	text-align: center;
	font-size: 40pt;
	letter-spacing: 20rpx;
	font-weight: 600;
	margin-top: -18rpx;
	color: white;
}
.music{
	width: 90%;
	line-height: 90rpx;
	height: 100rpx;
	margin: 30px auto;
	border-radius: 20rpx;
	display: flex;
	flex-direction: row;
    align-items: center; 	
	text-align: center;
}
.mcitem{
	width: 21%;
	margin-left: 20rpx;
	font-size: 30rpx;
	color: white;
	border-radius: 0 30rpx 0 30rpx;
	display: flex;
	flex-direction: row;
    align-items: center; 
	justify-content: center; 
}
.micon{
	width: 20px;
	height: 20px;
	margin-bottom: 28rpx;
}
.close{
	background: linear-gradient(to bottom, #22DDDD, #00CCFF);
}
.open{
	background-color: #0099FF;
}
.fuckitem{
	width: 21%;
	margin-left: 20rpx;
	font-size: 30rpx;
	color: white;
	border-radius: 30rpx 0 30rpx 0 ;
	display: flex;
	flex-direction: row;
    align-items: center; 
	justify-content: center; 
}
.tips{
	width: 80%;
	font-size: 30rpx;
	color: white;
}
.userinfo {
    display: flex;
 	flex-direction: column;
    align-items: center;
    width: 100%;
    height: 400rpx;
	margin-top: -160rpx;
}

.userinfo-avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    overflow: hidden;
	margin-top: 100rpx;
	box-shadow: #8c8c8c 0 0 10rpx;
}

.userinfo-nickname {
    margin-top: 20rpx;
    color: white;
    font-size: 36rpx;
    letter-spacing: 2rpx;
}
.icon {
    width: 100%;
    height: 100%;
}